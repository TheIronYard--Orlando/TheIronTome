<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<h1><%= t('.title_html') %></h1>

<% if @visit_count > 5 %>
<p>You've visited the catalog <%= pluralize(@visit_count, 'time') %> since you last added to your cart.</p>
<% end %>

<% cache ['store', Product.latest] do %>
  <% @products.each do |product| %>
    <% cache ['entry', product] do %>
      <div class="entry">
        <%= image_tag(product.image_file_name) %>
        <h3><%= product.title %></h3>
        <%= sanitize(product.description) %>
        <div class="price_line">
          <span class="price"><%= number_to_currency(product.price) %></span>
          <%= button_to t('.add_html'), line_items_path(product_id: product), remote: true %>
          <%= button_to 'add to wishlist', wish_lists_path(user_id: @user, product_id: product),  remote: true %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>

  
