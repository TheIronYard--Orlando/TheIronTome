<div class="depot_form">
<% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p>
<% end %>

<%= form_tag do %>
  <fieldset>
    <legend>Please Log In</legend>
    <div>
      <%= label_tag :email, 'Email:' %>
      <%= text_field_tag :email, params[:email] %>
    </div>

    <div>
      <%= label_tag :password, 'Password:' %>
      <%= text_field_tag :password, params[:password] %>
    </div>

    <div>
      <%= submit_tag "Login" %>
    </div>
  </fieldset>
<% end %>
</div>
