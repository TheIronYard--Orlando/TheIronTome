<div class="depot_form">

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend>Enter User Details</legend>
    <div class="field">
      <%= f.label :name, 'Name:' %><br>
      <%= f.text_field :name, size: 40 %>
    </div>
    <div class="field">
      <%= f.label :address_1, 'Address 1:' %><br>
      <%= f.text_field :address_1, size: 40 %>
    </div>
    <div class="field">
      <%= f.label :address_2, 'Address 2:' %><br>
      <%= f.text_field :address_2, size: 40 %>
    </div>
    <div class="field">
      <%= f.label :city, 'City:' %><br>
      <%= f.text_field :city, size: 40 %>
    </div>
    <div class="field">
      <%= f.label :state, 'State:' %><br>
      <%= f.text_field :state, size: 40 %>
    </div>
    <div class="field">
      <%= f.label :zipcode, 'Zipcode:' %><br>
      <%= f.text_field :zipcode, size: 40 %>
    </div>
    <div class="field">
      <%= f.label :email, 'Email:' %><br>
      <%= f.text_field :email, size: 40 %>
    </div>
    <% if @user.persisted? %>
      <div class="field">
        <%= f.label :current_password, 'Current Password:' %><br>
        <%= f.password_field :current_password, size: 40 %>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :password, 'Password:' %><br>
      <%= f.password_field :password, size: 40 %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, 'Confirm:' %><br>
      <%= f.password_field :password_confirmation, size: 40 %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </fieldset>
<% end %>

</div>
